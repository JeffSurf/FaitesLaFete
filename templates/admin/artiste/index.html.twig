{% extends 'admin/baseAdmin.html.twig' %}

{% block contenu %}
    <div class="container mt-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h2>Liste des d√©partements</h2>
        <a href="{{ path('app_admin_artiste_ajouter') }}" class="btn btn-primary">Ajouter un artiste</a>
        <table class="table">
            <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Style de musique
                </th>
                <th>
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% for artiste in artistes %}
                <tr>
                    <td>{{ artiste.nom }}</td>
                    <td>{{ artiste.style }}</td>
                    <td>
                        <a href="{{ path('app_admin_artiste_modifier', {'id': artiste.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('app_admin_artiste_supprimer', {'id': artiste.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
